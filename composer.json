{
  "name": "WP Skateboard",
  "description": "My local WordPress development built with Docker and Composer.",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Alex MacArthur",
      "email": "alex@macarthur.me",
      "homepage": "https://macarthur.me"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "wpackagist-plugin/better-resource-hints": "^1.1.2"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}